{
  "name": "@acme/convex",
  "private": true,
  "type": "module",
  "exports": {
    "./api": {
      "types": "./src/_generated/api.d.ts",
      "default": "./src/_generated/api.js"
    },
    "./model": {
      "types": "./src/_generated/dataModel.d.ts"
    },
    "./types": "./src/types.ts"
  },
  "scripts": {
    "dev": "convex dev",
    "build": "convex deploy",
    "clean": "git clean -xdf .cache .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path .prettierignore",
    "lint": "eslint --ignore-pattern 'src/shopify/genql/**'",
    "typecheck": "tsc --noEmit",
    "setup": "convex dev --until-success",
    "logs": "convex logs",
    "genql:admin": "genql --schema src/shopify/genql/schemas/admin.graphql --output src/shopify/genql/admin -S DateTime:string -S Decimal:string -S HTML:string -S URL:string --sort",
    "genql:storefront": "genql --schema src/shopify/genql/schemas/storefront.graphql --output src/shopify/genql/storefront -S Decimal:string -S URL:string --sort",
    "genql": "pnpm run genql:admin && pnpm run genql:storefront",
    "test": "vitest run"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@convex-dev/eslint-plugin": "^1.1.1",
    "@genql/cli": "^6.3.3",
    "@types/node": "^22.19.1",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "^3.2.4"
  },
  "prettier": "@acme/prettier-config",
  "dependencies": {
    "convex": "catalog:",
    "convex-env": "^2.5.0",
    "convex-helpers": "^0.1.108",
    "uploadthing": "^7.7.4"
  }
}
