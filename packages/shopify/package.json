{
  "name": "@acme/shopify",
  "private": true,
  "type": "module",
  "exports": {
    "./storefront/types": "./src/storefront/_generated/storefront.types.d.ts",
    "./storefront/generated": "./src/storefront/_generated/storefront.generated.d.ts",
    "./storefront/cart": "./src/storefront/cart/index.ts",
    "./storefront/product": "./src/storefront/product/index.ts",
    "./customer/generated": "./src/customer/_generated/customer.generated.d.ts",
    "./customer/types": "./src/customer/_generated/customer.types.d.ts",
    "./customer/account": "./src/customer/account/index.ts",
    ".": "./src/index.ts"
  },
  "license": "MIT",
  "scripts": {
    "codegen": "pnpm with-env graphql-codegen --config ./.graphqlrc.ts",
    "codegen:storefront": "pnpm run codegen --project storefront",
    "codegen:customer": "pnpm run codegen --project customer",
    "build": "concurrently \"pnpm run codegen:storefront\" \"pnpm run codegen:customer\"",
    "dev": "concurrently \"pnpm run codegen:storefront --watch\" \"pnpm run codegen:customer --watch\"",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path .prettierignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore --ignore-path .prettierignore",
    "lint": "eslint",
    "with-env": "dotenv -e ../../.env --",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "peerDependencies": {
    "@shopify/hydrogen": "catalog:",
    "@shopify/storefront-api-client": "catalog:"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@graphql-codegen/cli": "^5.0.7",
    "@shopify/api-codegen-preset": "^1.2.0",
    "@types/node": "catalog:",
    "concurrently": "^9.2.1",
    "eslint": "catalog:",
    "graphql-config": "^5.1.5",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@acme/prettier-config",
  "dependencies": {
    "@shopify/hydrogen-codegen": "^0.3.3",
    "graphql": "^16.12.0"
  }
}
