{
  "name": "@acme/shopify",
  "private": true,
  "type": "module",
  "exports": {
    "./types": "./src/generated/storefront.types.d.ts",
    "./generated": "./src/generated/storefront.generated.d.ts",
    "./product": "./src/product/index.ts"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm with-env graphql-codegen --config ./.graphqlrc.ts",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "pnpm with-env graphql-codegen --config ./.graphqlrc.ts --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path .prettierignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore --ignore-path .prettierignore",
    "lint": "eslint",
    "with-env": "dotenv -e ../../.env --",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@graphql-codegen/cli": "^5.0.7",
    "@shopify/api-codegen-preset": "^1.2.0",
    "@types/node": "^25.2.3",
    "eslint": "catalog:",
    "graphql-config": "^5.1.5",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@acme/prettier-config",
  "dependencies": {
    "@shopify/storefront-api-client": "catalog:",
    "graphql": "^16.12.0"
  }
}
